# =============================================================================
# SoilWise Environment Configuration
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://admin:password@localhost:5432/soilwise
DB_PASSWORD=your_secure_password_here
DB_PATH=./data/soilwise.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=soilwise
MQTT_PASSWORD=soilwise
MQTT_CLIENT_ID=soilwise-main

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b
OLLAMA_URL=http://localhost:11434
CHROMADB_URL=http://localhost:8000
AI_SERVICE_URL=http://localhost:8082
AI_API_KEY=your_ai_api_key_here

# Voice Assistant Configuration
WHISPER_MODEL=base
WHISPER_MODEL_PATH=./models/whisper
TTS_MODEL=en-us
COQUI_MODEL_PATH=./models/coqui
VOICE_ENABLED=true
WAKE_WORD=hey_soilwise

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# External APIs
WEATHER_API_KEY=your_weather_api_key_here
SATELLITE_API_KEY=your_satellite_api_key_here
MAPS_API_KEY=your_maps_api_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@soilwise.com

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=soilwise-storage

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
METRICS_ENABLED=true

# Feature Flags
OFFLINE_MODE=false
SYNC_ENABLED=true
SYNC_INTERVAL=300000
VOICE_ASSISTANT_ENABLED=true
AI_RECOMMENDATIONS_ENABLED=true
NOTIFICATIONS_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=86400
REMEMBER_ME_DURATION=2592000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Notification Settings
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Development Settings
NODE_ENV=development
PORT=9171
API_VERSION=v1
DEBUG=soilwise:*

# Grafana Configuration
GRAFANA_PASSWORD=admin_password_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Frontend Environment Variables (React/Vite)
REACT_APP_API_URL=http://localhost:9171/api
REACT_APP_MQTT_BROKER_URL=ws://localhost:8083/mqtt
REACT_APP_MQTT_URL=ws://localhost:9001
REACT_APP_MQTT_USERNAME=soilwise
REACT_APP_MQTT_PASSWORD=soilwise
REACT_APP_OFFLINE_ENABLED=false
REACT_APP_SYNC_ENABLED=false
REACT_APP_EDGE_MODE=false
VITE_API_URL=http://localhost:9171/api
VITE_MQTT_BROKER_URL=ws://localhost:8083/mqtt
VITE_MQTT_USERNAME=soilwise
VITE_MQTT_PASSWORD=soilwise

# Cloud Sync Configuration (Edge Hub)
CLOUD_SYNC_ENDPOINT=https://api.soilwise.com
CLOUD_API_KEY=your_cloud_api_key_here
CLOUD_API_URL=https://api.soilwise.com

# Edge Hub Configuration
EDGE_HUB_PORT=3000
ENCRYPTION_ENABLED=false
