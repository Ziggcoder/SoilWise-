{
  "name": "@soilwise/edge-hub",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "knex": "^3.0.1",
    "mqtt": "^5.1.3",
    "socket.io": "^4.7.2",
    "axios": "^1.5.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "serialport": "^12.0.0",
    "node-red": "^3.1.0",
    "ws": "^8.14.2",
    "sharp": "^0.32.6",
    "ffmpeg": "^0.0.4",
    "usb": "^2.11.0"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:win": "nodemon src/server.ts",
    "start:win": "npm run build && node dist/server.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js --fix",
    "setup-pi": "sudo bash scripts/setup-raspberry-pi.sh",
