# SoilWise Edge Hub - Local Development Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database
DB_PATH=./data/edge-hub.db

# Server Configuration
PORT=3000
HOST=localhost

# Features
ENABLE_SIMULATOR=true
ENABLE_AI_SERVICES=false
ENABLE_VOICE_ASSISTANT=false

# MQTT Configuration (if external broker available)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=edge-hub-dev

# API Endpoints
API_SERVER_URL=http://localhost:8080
DASHBOARD_URL=http://localhost:5173
PWA_URL=http://localhost:3001

# Authentication
JWT_SECRET=development-jwt-secret-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3001,http://localhost:8080
