# PWA Farmer App Environment Variables

# API Configuration
VITE_API_URL=http://localhost:8081
VITE_WS_URL=ws://localhost:8081

# Features
VITE_ENABLE_VOICE=true
VITE_ENABLE_AI=true
VITE_ENABLE_CAMERA=true
VITE_ENABLE_GPS=true

# PWA Configuration
VITE_APP_NAME="SoilWise Farmer"
VITE_APP_SHORT_NAME="SoilWise"
VITE_APP_DESCRIPTION="Offline-first farming assistant"

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Service Worker
VITE_SW_ENABLED=true
VITE_SW_DEBUG=false

# Storage
VITE_MAX_PHOTO_SIZE=5242880
VITE_MAX_AUDIO_SIZE=10485760
VITE_COMPRESSION_QUALITY=0.8

# Sync
VITE_SYNC_INTERVAL=300000
VITE_SYNC_BATCH_SIZE=10
VITE_MAX_RETRY_ATTEMPTS=3
