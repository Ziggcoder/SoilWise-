# =============================================================================
# SoilWise Edge Computing Configuration (Raspberry Pi)
# =============================================================================

# Edge Computing Configuration
NODE_ENV=production
PORT=3000
EDGE_MODE=true
DEVICE_ID=edge-hub-001
LOCATION_LAT=40.7128
LOCATION_LNG=-74.0060

# Local Database (SQLite)
DATABASE_PATH=/data/edge.db
ENABLE_WAL=true
DATABASE_BACKUP_ENABLED=true
BACKUP_INTERVAL=86400

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=soilwise-edge
MQTT_USERNAME=soilwise-edge-user
MQTT_PASSWORD=soilwise-edge-pass

# AI Configuration (Optimized for Pi)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b
CHROMADB_URL=http://localhost:8000
AI_INFERENCE_TIMEOUT=30000
AI_MODEL_QUANTIZATION=true

# Voice Assistant Configuration
WHISPER_MODEL=base
TTS_MODEL=en-us
VOICE_ENABLED=true
WAKE_WORD=hey_farmer
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
VOICE_TIMEOUT=10000

# Sensor Configuration
SENSOR_SCAN_INTERVAL=30000
SENSOR_TIMEOUT=5000
SENSOR_RETRY_COUNT=3
SUPPORT_LORA=true
SUPPORT_ZIGBEE=true
SUPPORT_BLUETOOTH=true

# Synchronization Configuration
SYNC_ENABLED=true
SYNC_INTERVAL=300000
SYNC_RETRY_COUNT=3
SYNC_BATCH_SIZE=100
CLOUD_API_URL=https://api.soilwise.com
CLOUD_API_KEY=your_cloud_api_key_here

# Offline Configuration
OFFLINE_FIRST=true
OFFLINE_STORAGE_LIMIT=1073741824  # 1GB
OFFLINE_SYNC_QUEUE_SIZE=10000
CONFLICT_RESOLUTION=local_wins

# Hardware Configuration
GPIO_ENABLED=true
SPI_ENABLED=true
I2C_ENABLED=true
UART_ENABLED=true
CAMERA_ENABLED=true
CAMERA_RESOLUTION=1920x1080

# Power Management
POWER_SAVING_MODE=true
CPU_GOVERNOR=ondemand
WIFI_POWER_SAVE=true
BLUETOOTH_POWER_SAVE=true
SLEEP_ENABLED=false

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
LOG_ROTATION=daily
MAX_LOG_SIZE=100MB

# Security Configuration
JWT_SECRET=your_edge_jwt_secret_here
ENCRYPTION_ENABLED=true
FIREWALL_ENABLED=true
SSH_KEY_AUTH_ONLY=true
DISABLE_UNUSED_SERVICES=true

# Network Configuration
WIFI_SSID=your_wifi_ssid
WIFI_PASSWORD=your_wifi_password
ETHERNET_ENABLED=true
CELLULAR_ENABLED=false
HOTSPOT_ENABLED=false

# Storage Configuration
DATA_RETENTION_DAYS=30
IMAGE_COMPRESSION=true
IMAGE_QUALITY=80
VIDEO_RECORDING=false
STORAGE_CLEANUP_ENABLED=true
STORAGE_ALERT_THRESHOLD=80

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/backup
CLOUD_BACKUP_ENABLED=true
BACKUP_ENCRYPTION=true

# Update Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400
UPDATE_DOWNLOAD_ONLY=false
REBOOT_AFTER_UPDATE=true

# Debugging Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true
TEMPERATURE_MONITORING=true

# Feature Flags
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false
ADVANCED_AI_FEATURES=true
VOICE_MULTILINGUAL=false
PREDICTIVE_ANALYTICS=true

# Regional Settings
TIMEZONE=America/New_York
LANGUAGE=en_US
CURRENCY=USD
TEMPERATURE_UNIT=celsius
DISTANCE_UNIT=metric
DATE_FORMAT=MM/DD/YYYY
